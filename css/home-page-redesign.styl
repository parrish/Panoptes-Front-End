NAVY = #044774
TEAL = #1DAAA7
DARK-BLUE = #0C4881
ORANGE = #FA8B22
GRAY = #EFF2F5


.on-home-page-not-logged-in
  .app-layout__header
    background: rgba(0, 0, 0, 0.5)
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.0))
    position: absolute
    width: 100%
    z-index: 1
    top: 0
    left: 0

  .zooniverse-logo, .site-nav__link
    opacity: 1
    color: #FFFFFF

  .modal-form .site-nav__link
    color: #000000

  h1, h2
    color: #FFFFFF
    font-size: 30px

    @media (max-width: 900px)
      font-size: 25px

    &.lighter
      font-weight: 400

.home-page-not-logged-in
  section
    display: flex
    flex-direction: column
    position: relative
    align-items: center
    justify-content: center
    text-align: center
    min-height: 50vw // video is 2:1 aspect ratio and 100% width

  .zooniverse-logo
    position: relative
    width: 25px
    top: 4px

  .standard-button
    background: none
    border: 4px solid #FFFFFF
    border-radius: 6px
    padding: 0.75em 1.5em
    transition: background 500ms ease
    margin-top: 50px
    font-size: 15px

    @media (max-width: 900px)
      margin-top: 20px

    &:hover
      background: rgba(0, 0, 0, 0.3)

  .home-link-down
    width: 100%
    text-align: center
    border: none
    background-color: TEAL
    color: #FFFFFF
    font-size: 50px
    line-height: 50px

  .home-intro
    color: #FFFFFF
    z-index: 0

    h1
      color: #FFFFFF

    video
      display: none

    .home-mobile-video-image
      display: block

    @media (min-width: 900px)
      video
        display: block

      .home-mobile-video-image
        display: none

  .home-discover
    color: NAVY
    background-color: GRAY

    p
      margin: 20px auto
      width: 50vw
      font-size: 2em

      @media (max-width: 900px)
        width: 100%

    h1, p, .standard-button
      color: NAVY

    .standard-button
      border: 4px solid NAVY

      &:hover
        background: rgba(0, 0, 0, 0.1)

  .home-promoted, .home-featured-collections
    background-size: cover
    background-position: center
    transition: background-image 500ms ease-in-out

    p
      color: #FFFFFF

    .description
      opacity: 1
      position: relative
      top: 10px
      margin-top: 10px
      margin-bottom: 10px
      font-size: 3em

      &:not(.appearing)
        transition: all 1s

      &.appearing
        top: 50px
        opacity: 0

    &:hover
      .controls
        opacity: 1

    .controls
      opacity: 0
      transition: opacity 500ms ease-in-out
      color: #FFFFFF

      i
        cursor: pointer

      &.arrows
        position: absolute
        font-size: 4em
        border: 3px solid #FFFFFF
        border-radius: 50%
        text-align: center
        width: 25px
        height: 25px
        line-height: 25px
        vertical-align: middle
        padding: 10px

        &.fa-angle-left
          left: 50px

        &.fa-angle-right
          right: 50px

      &.circles
        position: absolute
        bottom: 100px
        left: 0
        width: 100%
        text-align: center

        .fa-circle, .fa-circle-o
          margin: 0 5px 0 5px

    .owner
      position: absolute
      bottom: 100px
      left: 2vw
      margin: 0

  .home-social
    h1
      color: DARK-BLUE
      margin: 30px auto

    h2, h2 a
      color: DARK-BLUE
      margin: 20px auto
      font-size: 1.5em
      text-decoration: none

    .home-social-columns
      width: 100%
      display: flex
      flex-direction: row
      justify-content: space-around

      @media (max-width: 900px)
        display: block

      .home-social-column
        text-align: left

        ul
          list-style: none
          padding: 0

          li
            margin: 0 0 2.5em 0
            max-width: 100vw

            @media (min-width: 900px)
              max-width: 25vw

            h3
              font-weight: bolder
              line-height: 15px

            h3, p
              a
                text-decoration: none
                color: inherit

        .home-social-timestamp
          margin: 0.5em 0
          font-size: 1.25em

        .home-social-read-more
          font-style: italic
          font-weight: bolder
          color: ORANGE
          text-decoration: none
