LIGHT-BLUE-GREEN = #5CBDC1
DARK-BLUE-GREEN = #007482
DARK-BLUE = #0C4881
VERY-DARK-BLUE = #020D26
HIGHLIGHT-LINK = #E45950
GRAY = #EFF2F5

.on-home-page-not-logged-in
  .app-layout__header
    background: rgba(0, 0, 0, 0.5)
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.0))
    position: absolute
    width: 100%
    z-index: 1
    top: 0
    left: 0

  .zooniverse-logo, .site-nav__link
    opacity: 1
    color: #FFFFFF

  .modal-form .site-nav__link
    color: #000000

  h1, h2
    color: #FFFFFF
    font-size: 30px

    @media (max-width: 900px)
      font-size: 25px

    &.lighter
      font-weight: 400

.home-page-not-logged-in
  section
    display: flex
    flex-direction: column
    position: relative
    align-items: center
    justify-content: center
    text-align: center
    min-height: 50vw // video is 2:1 aspect ratio and 100% width

  .zooniverse-logo
    position: relative
    width: 25px
    top: 4px

  .standard-button
    border: 2px solid
    border-radius: 6px
    border-color: #FFFFFF
    background: none
    padding: 0.75em 1.75em
    transition: background 500ms ease
    margin: 50px 10px 0 10px
    font-size: 15px
    font-weight: bold
    text-decoration: none

    @media (max-width: 900px)
      margin-top: 20px

    &:visited
      color: #FFFFFF

    &:hover,
    &:active,
    &:focus
      background: #FFFFFF
      color: DARK-BLUE-GREEN

  .home-link-down
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    text-align: center
    border: none
    background: none
    color: #FFFFFF
    font-size: 50px
    line-height: 50px

  .home-intro
    color: #FFFFFF
    z-index: 0

    video
      display: none

    .home-mobile-video-image
      display: block

    @media (min-width: 900px)
      video
        display: block

      .home-mobile-video-image
        display: none

    .home-intro-buttons
      display: flex
      flex-flow: row wrap
      justify-content: center

    .intro-button
      border: 0
      border-radius: 6px
      box-shadow: rgba(0, 0, 0, 0.5) 0 1px 2px 0
      background: rgba(255, 255, 255, 0.9)
      padding: 0.75em 1.75em
      transition: background 500ms ease
      margin: 50px 10px 0 10px
      font-size: 15px
      font-weight: bold
      text-decoration: none
      color: DARK-BLUE-GREEN

      @media (max-width: 900px)
        margin-top: 20px

      &:hover,
      &:active,
      &:focus
        background: LIGHT-BLUE-GREEN
        color: #FFFFFF

  .home-discover
    background-color: GRAY

    h1, p
      color: DARK-BLUE

    p
      margin: 20px auto
      width: 50vw
      font-size: 2em

      @media (max-width: 900px)
        width: 100%

    .discover-button
      border: 2px solid
      border-radius: 6px
      border-color: DARK-BLUE
      background: none
      padding: 0.75em 1.75em
      transition: background 500ms ease
      margin: 50px 10px 0 10px
      font-size: 15px
      font-weight: bold
      text-decoration: none
      color: DARK-BLUE

      @media (max-width: 900px)
        margin-top: 20px

      &:hover,
      &:active,
      &:focus
        background: DARK-BLUE
        color: #FFFFFF

  .home-promoted, .home-featured-collections
    background-size: cover
    transition: background-image 500ms ease-in-out

    p
      color: #FFFFFF

    .description
      position: relative
      opacity: 1
      top: 0
      font-size: 2em

      &:not(.appearing)
        transition: all 1s

      &.appearing
        top: 50px
        opacity: 0

    &:hover
      .controls
        opacity: 1

    .controls
      opacity: 0
      display: flex
      justify-content: space-around
      align-items: center
      width: 300px
      margin-top 50px
      color: #FFFFFF
      font-size: 2em
      transition: opacity 500ms ease-in-out

      .fa-angle-left, .fa-angle-right
        font-size: 1.5em

      i
        cursor: pointer

    .owner
      margin-left: 2vw
      margin-right: auto

  .home-social
    h1
      color: DARK-BLUE
      margin: 20px auto

    h2, h2 a
      color: DARK-BLUE
      margin: 20px auto
      font-size: 1.5em

    .home-social-columns
      display: flex
      flex-direction: row
      justify-content: space-around

      @media (max-width: 900px)
        display: block

      .home-social-column
        padding: 0 5%
        text-align: left

        ul
          list-style: none
          padding: 0

          li
            margin: 0 0 2.5em 0

        .home-social-text
          max-width: 100vw
          margin: 0
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap

          @media (min-width: 900px)
            max-width: 20vw

        .home-social-timestamp
          margin: 0.5em 0
